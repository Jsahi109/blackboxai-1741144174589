<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="error-page fade-in">
                <!-- Error Icon -->
                <div class="mb-4">
                    <% if (message.toLowerCase().includes('not found')) { %>
                        <i class="bi bi-question-circle text-warning" style="font-size: 5rem;"></i>
                    <% } else { %>
                        <i class="bi bi-exclamation-circle text-danger" style="font-size: 5rem;"></i>
                    <% } %>
                </div>

                <!-- Error Message -->
                <h1 class="display-4 mb-3">
                    <%= message %>
                </h1>

                <!-- Error Details -->
                <% if (error) { %>
                    <div class="card mb-4 shadow-sm">
                        <div class="card-body">
                            <p class="text-muted mb-0">
                                <%= error %>
                            </p>
                        </div>
                    </div>
                <% } %>

                <!-- Action Buttons -->
                <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                    <button onclick="history.back()" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2"></i>
                        Go Back
                    </button>
                    <a href="/" class="btn btn-primary">
                        <i class="bi bi-house me-2"></i>
                        Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.error-page {
    padding: 3rem 0;
}

.error-page .bi {
    animation: pulse 2s infinite;
}

@keyframes pulse {
    0% {
        transform: scale(1);
        opacity: 1;
    }
    50% {
        transform: scale(1.1);
        opacity: 0.8;
    }
    100% {
        transform: scale(1);
        opacity: 1;
    }
}

/* Dark mode support */
@media (prefers-color-scheme: dark) {
    .error-page .card {
        background-color: #242631;
    }
    
    .error-page .text-muted {
        color: #9699a4 !important;
    }
    
    .error-page .btn-outline-secondary {
        color: #e4e6eb;
        border-color: #4e4f55;
    }
    
    .error-page .btn-outline-secondary:hover {
        background-color: #4e4f55;
        color: #fff;
    }
}
</style>
